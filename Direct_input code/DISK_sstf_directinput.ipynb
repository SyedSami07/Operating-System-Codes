    "req_arr =[88, 150, 44, 173, 30, 15, 195]\n",
    "head = 50\n",
    "total_movement = 0\n",
    "while req_arr:\n",
    "    closest = min(req_arr, key=lambda x: abs(x-head))\n",
    "    req_arr.remove(closest)\n",
    "    total_movement+=abs(closest-head)\n",
    "    head = closest\n",
    "print(total_movement)"
